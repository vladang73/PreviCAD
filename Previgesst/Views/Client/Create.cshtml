@model ClientListViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<hr />
<div class="row">
    <div class="col-md-12" style="text-align:center">
        <h2 style="color:#BA3500">Site Administratif - Création d'un client</h2>
    </div>
</div>
<hr />

@using (Html.BeginForm("Create", "Client", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary(true, "", new { @class = "text-danger" });

    <div class="container-fluid">
        <div class="row">
            <div class="form-group form-inline" style="width:100%">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.ClientId, new { @class = "control-label pull-right" })
                </div>
               
            </div>
        </div>
        <div class="row">
            <div class="form-group form-inline" style="width:100%">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Nom, new { @class = "control-label pull-right" })
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Nom, new { @class = "form-control", @style = "width:100%" })
                    @Html.ValidationMessageFor(m => m.Nom, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group form-inline" style="width:100%">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Identificateur, new { @class = "control-label pull-right" })
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.Identificateur, new { @class = "form-control", @style = "width:100%" })
                    @Html.ValidationMessageFor(m => m.Identificateur, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group form-inline" style="width:100%">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Actif, new { @class = "control-label pull-right" })
                </div>
                <div class="col-md-6">
                    @Html.CheckBoxFor(m => m.Actif, new { @class = "control-label" })
                    @Html.ValidationMessageFor(m => m.Actif, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
        <div class="row">

            <div class="col-md-10" style="margin-left:calc(25% + -8px)">
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-primary" value="Créer" />
                    </div>
                </div>
            </div>
        </div>
}