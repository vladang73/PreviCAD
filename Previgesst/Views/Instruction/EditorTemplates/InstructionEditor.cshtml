@model InstructionViewModel

<div class="p-4 bg-white">
    <div class="row">
        <div class="col-11">

            @Html.HiddenFor(model => model.InstructionId)


            <div class="form-group m-3 mt-0">
                @Html.LabelFor(model => model.Identificateur, new { @class = "form-label d-block" })


                @Html.TextBoxFor(model => model.Identificateur, new { @class = "form-control petit" })
                @Html.ValidationMessageFor(model => model.Identificateur)
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.IdentificateurEN, new { @class = "form-label d-block" })


                @Html.TextBoxFor(model => model.IdentificateurEN, new { @class = "form-control petit" })
                @Html.ValidationMessageFor(model => model.IdentificateurEN)
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.DispositifId, new { @class = "form-label d-block" })

                @(Html.Kendo().DropDownListFor(m => m.DispositifId)
                        .DataValueField("DispositifId")
                        .DataTextField("Description")
                        .BindTo((System.Collections.IEnumerable)ViewData["Dispositifs"])
                        .HtmlAttributes(new { data_value_primitive = "true" })
                )
                @Html.ValidationMessageFor(model => model.DispositifId)
            </div>



            <div class="form-group m-3">
                @Html.LabelFor(model => model.AccessoireId, new { @class = "form-label d-block" })

                @(Html.Kendo().DropDownListFor(m => m.AccessoireId)
                        .DataValueField("AccessoireId")
                        .DataTextField("Description")
                        .BindTo((System.Collections.IEnumerable)ViewData["Accessoires"])
                        .HtmlAttributes(new { data_value_primitive = "true" })
                )
                @Html.ValidationMessageFor(model => model.DispositifId)
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.TexteInstruction, new { @class = "form-label d-block" })


                @Html.TextAreaFor(model => model.TexteInstruction, new { @cols = 80, @rows = 7, @class = "form-control petit" })
                @Html.ValidationMessageFor(model => model.TexteInstruction)
            </div>

            <div class="form-group m-3">
                @Html.LabelFor(model => model.TexteInstructionEN, new { @class = "form-label d-block" })


                @Html.TextAreaFor(model => model.TexteInstructionEN, new { @cols = 80, @rows = 7, @class = "form-control petit" })
                @Html.ValidationMessageFor(model => model.TexteInstructionEN)
            </div>


        </div>
    </div>
</div>
<script>
    jQuery(document).ready(function () {
        "use strict";

        jQuery('.k-grid-update').removeClass('btn-editicon').addClass('btn-mettre m-1');
        jQuery('.k-grid-cancel').removeClass('btn-editicon').addClass('btn-Annuler m-1');
    });
</script>