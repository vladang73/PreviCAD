@using Previgesst.Ressources
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_v2.cshtml";
}
@model ParametresAppViewModel




@section sidebar{

    <ul class="nav flex-column sidebar-nav" role="tablist">
        <li class="nav-item text-center mt-2">
            <a class="nav-link home-navlink" href='@Url.Action("Index", "AdminPrevi")'>
                <img src="/content/v2/images/icon-home.png" /><p class="nav-link-text">@LayoutRES.Accueil</p>
            </a>
        </li>
    </ul>
}




<main class="main-container-wrapper page-container">
    <div class="breadcrumbs-nav-wrapper">
        <ul class="breadcrumbs">
            <li><a href='@Url.Action("Index", "AdminPrevi")'>@LayoutRES.Accueil</a></li>
            <li class="active" aria-current="page">Paramètres de l'application</li>
        </ul>
    </div>


    <div class="main-page-content">

        <div class="table-top-header">
            <div class="page-title d-flex justify-content-center align-items-center">
                <h3 class="m-0">Général - Maintenance</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-md-7 col-12">


                @using (Html.BeginForm("SaveParametersApp", "ParametresApp", FormMethod.Post))
                {
                    @Html.AntiForgeryToken();
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" });

                    @*// TOTAL CADENASSAGE SHEETS
                    <hr />
                    <h1><strong>Général</strong></h1>
                    <hr />*@


                    // ID MAINTEANCE
                    <div class="form-group mt-3">
                        @Html.HiddenFor(m => m.ParametresAppId, new { @class = "form-control" })
                    </div>

                    // ACTIVATION OF THE MAINTENANCE BOX
                    <div class="form-group mt-3">
                        @*@Html.LabelFor(m => m.NextUpdateCase, new { @class = "form-label" })
                            @Html.CheckBoxFor(m => m.NextUpdateCase, new { @class = "control-label" })*@

                        <div class="squaredThree squaredThree-blue d-inline-block">
                            <input type="checkbox" id="NextUpdateCase" name="NextUpdateCase" @(Model.NextUpdateCase ? "checked" : "") value="@Convert.ToString(Model.NextUpdateCase).ToLower()" />
                            <label for="squaredone" class="form-label pt-1"><span>@Html.DisplayNameFor(m => m.NextUpdateCase) </span></label>
                        </div>

                        @Html.ValidationMessageFor(m => m.NextUpdateCase, "", new { @class = "text-danger" })
                    </div>

                    // DESCRIPTION FR
                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.NextUpdateTextFr, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.NextUpdateTextFr, new { @class = "form-control" })
                    </div>

                    // DESCRIPTION EN
                    <div class="form-group mt-3">
                        @Html.LabelFor(m => m.NextUpdateTextEn, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.NextUpdateTextEn, new { @class = "form-control" })
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" class="btn btn-mettre m-1 float-end" value="Enregistrer" />
                    </div>
                }
            </div>
        </div>
    </div>
</main>
