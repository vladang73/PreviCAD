<script defer="defer">
    function copieClientUrl() {
        var copyText = document.getElementById("urlClient");
        copyText.select();
        copyText.setSelectionRange(0, 99999)
        document.execCommand("copy");
    }

    function copieClientUrlMobile() {
        var copyText = document.getElementById("urlClientMobile");
        copyText.select();
        copyText.setSelectionRange(0, 99999)
        document.execCommand("copy");
    }
</script>