@model DocumentClientViewModel


<div class="p-3">

    <div class="row">
        <div class="col-11">
            @Html.HiddenFor(model => model.DocumentClientId)
            @Html.HiddenFor(model => model.ClientId)
            @Html.HiddenFor(model => model.ApplicationPreviId)


            <div class="form-group">
                @Html.LabelFor(model => model.Titre, new { @class = "form-label d-block" })


                @Html.TextBoxFor(model => model.Titre, new { @class = "form-control petit" })
                @Html.ValidationMessageFor(model => model.Titre)
            </div>

            <div class="form-group mt-3">
                @Html.LabelFor(model => model.FileName, new { @class = "form-label d-block" })
            </div>

            <div class="form-group mt-3 btn-image-upload-only">

                @(Html.Kendo().Upload()
                .Name("file")
                .HtmlAttributes(new { @class = "form-control" })
                        .Multiple(false)
                        .Async(a => a
                            .Save("SaveDocumentClientLinkCadenassage", "Documents", new { id = Model.ClientId })
                            .AutoUpload(true)
                        )
                        .Events(
                        e => e.Success("fileSuccess").Upload("fileUpload").Select("fileSelect")
                ))

            </div>

        </div>
    </div>
</div>






