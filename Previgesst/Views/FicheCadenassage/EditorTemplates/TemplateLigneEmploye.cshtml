@using Previgesst.Ressources.Cadenassage
@model EmployeRegistreViewModel
<style>
    div.k-edit-form-container {
        width: auto;
    }

        div.k-edit-form-container div.editor-field textarea, input.k-textbox, .k-dropdown {
            width: 100%;
            max-width: none;
            padding-left: 0px;
        }



    .petit {
        max-height: 20px;
    }

    .row {
        margin-right: 15px;
        margin-left: 15px;
    }

    .col {
        padding-left: 0px;
        padding-right: 0px;
    }
</style>

<div class="container" style="width:600px;">


    <div class="panel panel-default" style="margin-left:15px;margin-right:30px;">

        <div class="panel-heading back-panel-light" style="font-size:larger;font-weight:500;color:white"></div>
        <div class="panel-body">



            <div class="row">
                <div class="col-md-10" style="padding-left:0px;">
                    @Html.HiddenFor(model => model.EmployeRegistreId)
                    @Html.HiddenFor(model => model.ClientId)

                    <div class="form-group">





                        <div class="form-group" style="margin-bottom:5px;">


                            @Html.LabelFor(model => model.NoEmploye, new { @class = "control-label pull-left" })


                            @Html.TextBoxFor(model => model.NoEmploye, new { @class = "form-control petit", @style = "width:95%" })
                            @Html.ValidationMessageFor(model => model.NoEmploye)

                        </div>


                        <div class="form-group" style="margin-bottom:5px;">


                            @Html.LabelFor(model => model.Nom, new { @class = "control-label pull-left" })


                            @Html.TextBoxFor(model => model.Nom, new { @class = "form-control petit", @style = "width:95%" })
                            @Html.ValidationMessageFor(model => model.Nom)

                        </div>



                        <div class="form-group" style="margin-bottom:5px;">
                          @Html.LabelFor(model => model.DepartementId, new { @class = "control-label" })
                            @*<span class="control-label">Département</span>*@
                            @(Html.Kendo().DropDownListFor(m => m.DepartementId)
                                                .DataValueField("DepartementId")
                                                .DataTextField("NomDepartement")
                                                .BindTo((System.Collections.IEnumerable)ViewData["Departements"])
                                                .DataSource(c =>
                                                        {
                                                            c.Read(k => k.Action("getDepartements", "FicheCadenassage", new { IDClient = ViewData["LeClient"] }));
                                                        })
                                                .HtmlAttributes(new { data_value_primitive = "true" })
                                                    .OptionLabel(CadEmpRES.SelectDEPT)
                            )
                            @Html.ValidationMessageFor(model => model.DepartementId)
                        </div>


                        <div class="form-group" style="margin-bottom:5px;">


                            @Html.LabelFor(model => model.NoCadenas, new { @class = "control-label pull-left" })


                            @Html.TextBoxFor(model => model.NoCadenas, new { @class = "form-control petit", @style = "width:95%" })
                            @Html.ValidationMessageFor(model => model.NoCadenas)

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, new { @class = "control-label pull-left" })

                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control petit", @style = "width:100%", @autocomplte = "new-password" })
                            @Html.ValidationMessageFor(model => model.Password)

                        </div>


                        <div class="form-group">
                            @Html.LabelFor(m => m.Actif, new { @class = "control-label" })

                            @Html.CheckBoxFor(m => m.Actif)
                            @Html.ValidationMessageFor(m => m.Actif, "", new { @class = "text-danger" })

                        </div>


                    </div>
                </div>
            </div>

        </div>
    </div>

</div>
