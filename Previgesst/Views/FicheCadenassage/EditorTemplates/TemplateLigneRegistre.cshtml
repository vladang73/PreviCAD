@using Previgesst.Ressources.Previcad
@model LigneRegistreViewModel

<style>
    div.k-edit-form-container {
        width: auto;
    }

        div.k-edit-form-container div.editor-field textarea, input.k-textbox, .k-dropdown {
            width: 100%;
            max-width: none;
            padding-left: 0px;
        }



    .petit {
        max-height: 20px;
    }

    .row {
        margin-right: 15px;
        margin-left: 15px;
    }

    .col {
        padding-left: 0px;
        padding-right: 0px;
    }
</style>

<div class="container" style="width:600px;">


    <div class="panel panel-default" style="margin-left:15px;margin-right:30px;">

        <div class="panel-heading back-panel-light" style="font-size:larger;font-weight:500;color:white"></div>
        <div class="panel-body">


         
            <div class="row">
                <div class="col-md-10" style="padding-left:0px;">
                    @Html.HiddenFor(model => model.LigneRegistreId)
                    @Html.HiddenFor(model => model.FicheCadenassageId)

                    <div class="form-group">

                        <div class="form-group" style="margin-bottom:5px;">
                            @Html.LabelFor(model => model.Rep1, new { @class = "control-label" })


                            @(Html.Kendo().DropDownListFor(model => model.Rep1)

                                        .DataTextField("Text")
                                        .DataValueField("Value")

                                        .BindTo(new List<SelectListItem>() {
                                                   
                                            new SelectListItem() {
                                                Text = PrevFicheRES.Oui,
                                                Value = "Oui"
                                            },
                                            new SelectListItem() {
                                                Text = PrevFicheRES.Non ,
                                                Value = "Non"
                                            }
                                        })
                                         .OptionLabel("---")
                                        .HtmlAttributes(new { style = "width: 100%" })
                            )
                        </div>

                        <div class="form-group" style="margin-bottom:5px;">
                            @Html.LabelFor(model => model.Rep2, new { @class = "control-label" })

                            @(Html.Kendo().DropDownListFor(model => model.Rep2)

                                    .DataTextField("Text")
                                    .DataValueField("Value")

                                    .BindTo(new List<SelectListItem>() {
                                                                      
                                        new SelectListItem() {
                                            Text = PrevFicheRES.Oui,
                                            Value = "Oui"
                                        },
                                        new SelectListItem() {
                                            Text = PrevFicheRES.Non ,
                                            Value = "Non"
                                        }
                                    })
                                    .OptionLabel("---")
                                    .HtmlAttributes(new { style = "width: 100%" })
                            )
                        </div>
                        <div class="form-group" style="margin-bottom:5px;">
                            @Html.LabelFor(model => model.Rep3, new { @class = "control-label" })

                            @(Html.Kendo().DropDownListFor(model => model.Rep3)

                                   .DataTextField("Text")
                                   .DataValueField("Value")

                                   .BindTo(new List<SelectListItem>() {
                                                                      
                                        new SelectListItem() {
                                            Text = PrevFicheRES.Oui,
                                            Value = "Oui"
                                        },
                                        new SelectListItem() {
                                            Text = PrevFicheRES.Non ,
                                            Value = "Non"
                                        }
                                   })
                                   .OptionLabel("---")
                                   .HtmlAttributes(new { style = "width: 100%" })
                            )
                        </div>
                        @*  <div class="form-group" style="margin-bottom:5px;">
                                @Html.LabelFor(model => model.Rep4, new { @class = "control-label" })

                                @Html.CheckBoxFor(model => model.Rep4)
                            </div>*@

                        <div class="form-group" style="margin-bottom:5px;">
                            @Html.LabelFor(model => model.NoteAudit, new { @class = "control-label" })

                            @Html.TextAreaFor(model => model.NoteAudit, new { @class = "form-control", @rows = 3 })
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>

</div>