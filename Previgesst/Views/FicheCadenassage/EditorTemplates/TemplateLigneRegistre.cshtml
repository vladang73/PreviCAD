@using Previgesst.Ressources.Previcad
@model LigneRegistreViewModel

<div class="p-3">

    <div class="row">
        <div class="col-11">

            @Html.HiddenFor(model => model.LigneRegistreId)
            @Html.HiddenFor(model => model.FicheCadenassageId)


            <div class="form-group">
                @Html.LabelFor(model => model.Rep1, new { @class = "form-label d-block" })


                @(Html.Kendo().DropDownListFor(model => model.Rep1)

                                        .DataTextField("Text")
                                        .DataValueField("Value")

                                        .BindTo(new List<SelectListItem>() {

                                            new SelectListItem() {
                                                Text = PrevFicheRES.Oui,
                                                Value = "Oui"
                                            },
                                            new SelectListItem() {
                                                Text = PrevFicheRES.Non ,
                                                Value = "Non"
                                            }
                                        })
                                        .OptionLabel("---")
                            )
            </div>

            <div class="form-group mt-3">
                @Html.LabelFor(model => model.Rep2, new { @class = "form-label d-block" })

                @(Html.Kendo().DropDownListFor(model => model.Rep2)

                            .DataTextField("Text")
                            .DataValueField("Value")

                            .BindTo(new List<SelectListItem>() {

                                new SelectListItem() {
                                    Text = PrevFicheRES.Oui,
                                    Value = "Oui"
                                },
                                new SelectListItem() {
                                    Text = PrevFicheRES.Non ,
                                    Value = "Non"
                                }
                            })
                            .OptionLabel("---")
                    )
            </div>

            <div class="form-group mt-3">
                @Html.LabelFor(model => model.Rep3, new { @class = "form-label d-block" })

                @(Html.Kendo().DropDownListFor(model => model.Rep3)

                        .DataTextField("Text")
                        .DataValueField("Value")

                        .BindTo(new List<SelectListItem>() {

                            new SelectListItem() {
                                Text = PrevFicheRES.Oui,
                                Value = "Oui"
                            },
                            new SelectListItem() {
                                Text = PrevFicheRES.Non ,
                                Value = "Non"
                            }
                        })
                        .OptionLabel("---")
                )
            </div>


            <div class="form-group mt-3">
                @Html.LabelFor(model => model.NoteAudit, new { @class = "form-label d-block" })

                @Html.TextAreaFor(model => model.NoteAudit, new { @class = "form-control", @rows = 3 })
            </div>

        </div>
    </div>
</div>

