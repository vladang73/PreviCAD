@using Previgesst.Ressources
@using Previgesst.Ressources.Previcad

@model LoginCadenassageViewModel
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>C L I E N T - Applications Prévigesst</title>

    <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">


    <link href="/content/mobile/remixicon.css" rel="stylesheet" />
    <link href="/content/mobile/bootstrap.min.css" rel="stylesheet" />
    <link href="/content/mobile/boostrap_override.css" rel="stylesheet" />
    <link href="/content/mobile/style.css" rel="stylesheet" />


    <link runat="server" rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <link runat="server" rel="icon" href="~/favicon.ico" type="image/ico" />

</head>

<body>




    <div class="login_background">
        <div class="login_container col-12 ">
            @*/*ms-md-5 ps-md-5 m-2*/*@
            <div class="login_data rounded-2">
                <h4 class="text-uppercase primary-color fw-bold"><!-- Login --> </h4>
                <p class="mb-2 mb-lg-4 text-color-light">Veuillez saisir vos informations de connexion</p>
                @using (Html.BeginForm("Index", "RegistreMobile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.HiddenFor(m => m.Identificateur)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group mb-2 mb-lg-4 ">
                        <div class="input-icon">
                            @Html.TextBoxFor(m => m.NoEmploye, new { @class = "form-control", @required = "true" })
                            @Html.ValidationMessageFor(m => m.NoEmploye, "", new { @class = "text-danger" })
                            <span class="input_field_icon"><i class="ri-user-3-line"></i></span>
                        </div>
                    </div>
                    <div class="form-group mb-2 mb-lg-4 ">
                        <div class="input-icon">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "true" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                            <span class="input_field_icon"><i class="ri-lock-line"></i></span>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary w-100 mb-3" value="@PrevIndexRES.SeConnecter" />
                }
                <div class="mt-3 text-center "> <a href="###" class="text-decoration-none">Mot de passe oublié?</a> </div>
            </div>
        </div>
    </div>

    <div class="position-relative">
        <div class="position-absolute col-12 col-lg-6" style="background-color: rgba(255,255,255,0.8);bottom: 0;right: 0;">
            <div class="m-4">
                <div class="row m-0">
                    <div class="col-12 col-md-6 ">
                        <img src="/content/mobile/images/logo.png" alt="Company Logo" style="max-width: 200px;" class="mb-md-5 fw-bolder" />
                        <p>
                            Logiciel dédié au cadenassage <br>
                            Version: 2.0 <br>
                            © 2021 Previcad Inc.
                        </p>
                    </div>
                    <div class="col-12 col-md-6" style="display: none;">
                        <h2 class="fw-bold">Lorum Ipsum</h2>
                        <small>Lorem ipsum </small>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="~/Scripts/jquery-3.1.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script src="~/Scripts/mobile/bootstrap.min.js"></script>

</body>
</html>